; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = false
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.{ini,conf,dist}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2

[{Makefile.*,makefile,Makefile,GNUmakefile,*.mk}]
indent_style = tab
tab_width = 4

[COMMIT_EDITMSG]
max_line_length = 0
